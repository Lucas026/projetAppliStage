<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="192dp"
        tools:layout_editor_absoluteY="246dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView_date_analyse"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/date_de_l_analyse" />

            <TextView
                android:id="@+id/textView_Date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/date"
                android:textColor="#090909"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textView_CodeArticle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/code_article" />

            <EditText
                android:id="@+id/editText_codeArticle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="number"
                android:autofillHints=""
                tools:ignore="LabelFor"/>

            <TextView
                android:id="@+id/textView_Article"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/textView_article" />

            <EditText
                android:id="@+id/editText_Article"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autofillHints=""
                android:ems="10"
                android:inputType="textPersonName"
                tools:ignore="LabelFor" />

            <TextView
                android:id="@+id/textView_NumPalette"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/TextView_numero_de_palette" />

            <EditText
                android:id="@+id/editText_numPalette"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="number"
                android:autofillHints=""
                tools:ignore="LabelFor" />

            <TextView
                android:id="@+id/textView_numLot"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/textView_numero_lot" />

            <EditText
                android:id="@+id/editText_numLot"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="number"
                android:autofillHints=""
                tools:ignore="LabelFor"/>

            <TextView
                android:id="@+id/textView_defaut"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/textView_defaut" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="10dp"
                android:layout_weight="0" />

            <Spinner
                android:id="@+id/spinner_defaut"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/textView_Chantier"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/textView_chantier_a_faire" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="10dp"
                android:layout_weight="0" />

            <Spinner
                android:id="@+id/spinner_chantier"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/textView_originePalette"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/textView_origine_palette" />

            <EditText
                android:id="@+id/editText_OriginePalette"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:autofillHints=""
                tools:ignore="LabelFor" />

            <TextView
                android:id="@+id/textView_responsabilite"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/textview_responsabilite" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="10dp"
                android:layout_weight="0" />

            <Spinner
                android:id="@+id/spinner_reponsabilite"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/textView_Photo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/tewtview_photo" />

            <Button
                android:id="@+id/button_photo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/btn_prendre_une_photo" />

            <ImageView
                android:id="@+id/imageView_affichePhoto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:srcCompat="@tools:sample/avatars"
                android:contentDescription="@string/affichePhoto" />

            <TextView
                android:id="@+id/textView_Commande"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/textviewCommande" />

            <EditText
                android:id="@+id/editText_Commande"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:autofillHints=""
                tools:ignore="LabelFor"/>

            <Button
                android:id="@+id/button_envoieManuel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/btn_envoyerManuel" />

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>